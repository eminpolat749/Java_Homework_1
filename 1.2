	{
		java.util.Scanner kb = new java.util.Scanner(System.in);
		
		System.out.print("3 sayÄ± giriniz:");
		int a = kb.nextInt();
		int b = kb.nextInt();
		int c = kb.nextInt();
		
		int mid = NumberUtil.mid(a, b, c);
		
		System.out.printf("Mid = %d%n", mid);
	}
}

class NumberUtil {
	public static int mid(int a, int b, int c)
	{
		if ((a <= b && b <= c) || (c <= b && b <= a))
			return b;
		else if ((b <= a && a <= c) || (c <= a && a <= b))
			return a;
		
		return c;
	}	
}
